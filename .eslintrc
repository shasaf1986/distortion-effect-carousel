{
  "extends": [
    "react-app",
    "prettier",
    "prettier/react",
    "prettier/@typescript-eslint"
  ],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "@typescript-eslint/no-unused-vars": ["error", {
      "vars": "all",
      "args": "after-used",
      "ignoreRestSiblings": false
    }],
    "arrow-body-style": "error",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/*.stories.{ts,tsx}",
          "**/*.test.{ts,tsx}",
          "**/*setupTests.{ts,tsx}",
          ".storybook/**"
        ]
      }
    ]
  }
}
